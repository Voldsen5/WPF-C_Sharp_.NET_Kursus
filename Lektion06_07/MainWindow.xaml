<Window x:Class="Lektion06_07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion06_07"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StatusBar VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text=""/>
            </StatusBarItem>
        </StatusBar>
        <Menu x:Name="Options" VerticalAlignment="top">
            <MenuItem Header="_File">
                <MenuItem x:Name="OptionNew" Header="_New" Click="OptionNew_Click" />
                <MenuItem x:Name="OptionOpen" Header="_Open" Click="OptionOpen_Click" />
                <MenuItem x:Name="OptionSave" Header="_Save" Click="OptionSave_Click" />
                <Separator />
                <MenuItem x:Name="OptionExit" Header="_Exit" Click="OptionExit_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
